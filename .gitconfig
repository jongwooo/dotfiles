[user]
	email = jongwooo.han@gmail.com
	name = jongwooo
[core]
	autocrlf = input
	excludesfile = /Users/jongwooo/.gitignore_global
[pull]
	ff = only
[init]
	defaultBranch = main
[merge]
	tool = vimdiff
[alias]
	c = commit
	cm = commit -m
	ci = commit --signoff
	st = status
	ps = push
	pu = "!git push --set-upstream origin `git b0`"
	pl = pull
	b = branch
	bd = branch -d
	m = merge
	co = checkout
	cob = checkout -b
	ch = "!git checkout $(git branch -vv | grep -v '^\\*' | fzf | awk '{print $1}')"
	b0 = "!git branch | awk '/^\\*/{print $2}'"
	back = "!git branch backup-`git b0`"

[user]
	name = jongwooo
	email = jongwooo.han@gmail.com
	username = jongwooo
[core]
	autocrlf = input
	excludesfile = ~/.gitignore_global
[pull]
	ff = only
[init]
	defaultBranch = main
[merge]
	tool = vimdiff
[color]
	ui = auto
[alias]
	c = commit
	cm = commit -m
	ci = commit --signoff
	s = status
	st = status -s
	sw = switch
	rt = restore
	ps = push
	psu = "!git push --set-upstream origin `git b0`"
	pl = pull
	b = branch
	bd = branch -d
	bD = branch -D
	m = merge
	co = checkout
	cob = checkout -b
	ch = "!git checkout $(git branch -vv | grep -v '^\\*' | fzf | awk '{print $1}')"
	b0 = "!git branch | awk '/^\\*/{print $2}'"
	back = "!git branch backup-`git b0`"
